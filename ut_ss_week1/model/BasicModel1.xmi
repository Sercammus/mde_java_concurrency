<?xml version="1.0" encoding="UTF-8"?>
<ad:BasicModel
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ad="www.example.org/activityDiagram"
    xsi:schemaLocation="www.example.org/activityDiagram ActivityDiagram.ecore"
    startActivity="//@activities.0"
    name="main">
  <activities
      xsi:type="ad:SimpleActivity"
      name="a"
      nextActivity="//@activities.1"/>
  <activities
      xsi:type="ad:Fork"
      name="fork"
      forkedThreads="//@threads.0 //@threads.1"/>
  <activities
      xsi:type="ad:Join"
      name="join"
      nextActivity="//@activities.4"/>
  <activities
      xsi:type="ad:End"
      name="end"/>
  <activities
      xsi:type="ad:Decision"
      name="checkIfDone"
      nextActivity="//@activities.5">
    <branches
        nextActivity="//@activities.3"
        condition="test"/>
  </activities>
  <activities
      xsi:type="ad:SimpleActivity"
      name="c"
      nextActivity="//@threads.1/@activities.0"/>
  <resources
      name="systemOut"/>
  <threads xsi:type="ad:ForkedThread"
      startActivity="//@threads.0/@activities.0"
      name="thread1">
    <activities
        xsi:type="ad:SimpleActivity"
        name="b1"
        nextActivity="//@activities.2"/>
  </threads>
  <threads xsi:type="ad:ForkedThread"
      startActivity="//@threads.1/@activities.0"
      name="thread2">
    <activities
        xsi:type="ad:SimpleActivity"
        name="b2"
        nextActivity="//@activities.2"
        sharedResources="//@resources.0"/>
  </threads>
</ad:BasicModel>
